void Add(DA* arr, int element)
{
	
	if (arr->size <= arr->used)
	{
		int newSize = (arr->size == 0) ? 2 : arr->size * 2;
		Reallocate(arr, newSize);
	}
	
	
	
}
void Free(DA* arr)
{
	arr->size = 0;
	arr->used = 0;
	delete[] arr->data;
	arr->data = NULL;

}

 int main()
{
	 DA da;
	 Init(&da);
	 Add(&da, 5);
	 Free(&da);
	 for (int i = 0; i < 100; i++)
	 {
		 Add(&da, i);
		 cout << da.size;
	 }
	 return 0;
    
}

